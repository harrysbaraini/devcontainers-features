{
    "name": "Nginx Unit",
    "id": "nginx-unit-php",
    "version": "2.0.0",
    "description": "Nginx Unit as an app server for your PHP application.",
    "options": {
        "port": {
            "type": "string",
            "proposals": ["80"],
            "default": "80",
            "description": "The port to run Unit"
        },
        "app_root": {
            "type": "string",
            "proposals": [],
            "default": "/var/www/html/public",
            "description": "Root path of the site"
        },
        "config_path": {
            "type": "string",
            "proposals": [],
            "default": "/nginx-unit/config.json",
            "description": "A custom JSON file to load as Unit configuration. It must be exist inside the container. If not provided, the auto-generated file will be used."
        },
        "php_version": {
            "type": "string",
            "proposals": [
                "8.2",
                "8.1"
            ],
            "default": "8.2",
            "description": "PHP version to install"
        },
        "php_packages": {
            "type": "string",
            "proposals": [
                "php8.2-imagick php8.2-gd",
                "php8.1-imagick php8.1-gd"
            ],
            "default": "",
            "description": "List of packages to include"
        },
        "timezone": {
            "type": "string",
            "proposals": ["UTC"],
            "default": "UTC",
            "description": "Timezone"
        }
    },
    "entrypoint": "/usr/local/bin/nginx-unit.sh",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
